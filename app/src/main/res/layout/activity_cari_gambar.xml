<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gl552vw.syarah_1202150249_modul4.CariGambarActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cari Gambar"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textAlignment="center"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/urlGambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan url gambar"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/btn_gambar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Klik untuk mencari gambar"
        android:layout_marginHorizontal="30dp"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

</LinearLayout>
